<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="7"
    android:layout_marginBottom="8dp"
    android:background="#CDCBB8"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/text"
        android:layout_height="333dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:focusable="false"
        android:gravity="bottom|right"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="55sp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="C"
        android:background="#C8A6A6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_percent"
        android:text="%"
        android:background="#E3CBCB"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_del"
        android:text="←"
        android:background="#BF7575"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_leftbra"
        android:text="("
        android:background="#DC9494"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_rightbra"
        android:text=")"
        android:background="#CD9D9D"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_PandM"
        android:text="+/-"
        android:background="#AFA2A2"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_squ2"
        android:text="√￣"
        android:background="#BC9E9E"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_sin"
        android:text="sin"
        android:textAllCaps="false"
        android:background="#3579AF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_cos"
        android:text="cos"
        android:textAllCaps="false"
        android:background="#115E9C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_div"
        android:text="÷"
        android:background="#9AC2E1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_mul"
        android:text="×"
        android:background="#7DC0F6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_7"
        android:text="7"
        android:background="#81B3DC"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_8"
        android:text="8"
        android:background="#AFCBE1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_9"
        android:text="9"
        android:background="#AEBECC"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_sub"
        android:text="-"
        android:background="#79BBEF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_4"
        android:text="4"
        android:background="#C3D8E8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_5"
        android:text="5"
        android:background="#3579AF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_6"
        android:text="6"
        android:background="#CBDAE6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_add"
        android:text="+"
        android:background="#889FB1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_1"
        android:text="1"
        android:background="#987EC5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_2"
        android:text="2"
        android:background="#9A85BF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_3"
        android:text="3"
        android:background="#A895C8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_equ"
        android:layout_width="77dp"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:text="="
        android:background="#9A8AB5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="0"
        android:background="#B2A6C6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_p"
        android:text="."
        android:background="#D3C8E6"
        android:textSize="20sp" />


</GridLayout>